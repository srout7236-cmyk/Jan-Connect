        function shareOnFacebook() {
            const url = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(window.location.href)}&quote=${encodeURIComponent(document.getElementById('socialModal').querySelector('textarea').value)}`;
            window.open(url);
            closeSocialModal();
        }

        function shareOnTwitter() {
            const text = document.getElementById('socialModal').querySelector('textarea').value;
            const url = `https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}`;
            window.open(url);
            closeSocialModal();
        }

        function closeSocialModal() {
            const modal = document.getElementById('socialModal');
            if (modal) modal.remove();
        }

        function submitAll() {
            showProgress();
            
            // Simulate all submissions
            let progress = 0;
            const interval = setInterval(() => {
                progress += 10;
                updateProgress(progress);
                
                if (progress >= 100) {
                    clearInterval(interval);
                    addToGrievanceTracking();
                    showNotification('All submissions completed successfully!');
                    
                    setTimeout(() => {
                        goToScreen('trackingScreen');
                        loadGrievances();
                    }, 2000);
                }
            }, 300);
        }

        function showProgress() {
            updateProgress(0);
        }

        function updateProgress(percent) {
            document.getElementById('submitProgress').style.width = percent + '%';
        }

        // Grievance tracking
        function addToGrievanceTracking() {
            const grievance = {
                id: 'JC' + Date.now().toString().slice(-6),
                title: problemData.issueType || 'Civic Issue',
                description: problemData.problemText?.substring(0, 100) + '...',
                date: new Date().toLocaleDateString('en-IN'),
                status: 'pending',
                department: problemData.department,
                location: `${userData.address}, ${userData.ward}`
            };
            
            grievances.unshift(grievance);
            saveGrievances();
        }

        function loadGrievances() {
            const saved = JSON.parse(localStorage.getItem('janconnect_grievances') || '[]');
            grievances = saved;
            updateGrievancesList();
            updateAchievements();
        }

        function saveGrievances() {
            localStorage.setItem('janconnect_grievances', JSON.stringify(grievances));
        }

        function updateGrievancesList() {
            const list = document.getElementById('grievancesList');
            if (!list) return;
            
            if (grievances.length === 0) {
                list.innerHTML = `
                    <div style="text-align: center; padding: 40px; color: #666;">
                        <div style="font-size: 48px;">üìù</div>
                        <strong>No grievances yet</strong><br>
                        <small>Start by reporting your first problem!</small>
                    </div>
                `;
                return;
            }
            
            list.innerHTML = grievances.map(grievance => `
                <div class="grievance-item status-${grievance.status}" onclick="showGrievanceDetails('${grievance.id}')">
                    <strong>${getStatusIcon(grievance.status)} ${grievance.title}</strong><br>
                    <small>Submitted: ${grievance.date}</small><br>
                    <small style="color: ${getStatusColor(grievance.status)};">Status: ${getStatusText(grievance.status)}</small><br>
                    <small>${grievance.location}</small>
                    ${grievance.status === 'pending' && getDaysSince(grievance.date) >= 15 ? 
                        '<br><button class="btn" style="padding: 5px 10px; font-size: 12px; margin-top: 5px;" onclick="sendReminder(\'' + grievance.id + '\')">üì¨ Send Reminder</button>' : ''}
                </div>
            `).join('');
        }

        function getStatusIcon(status) {
            const icons = {
                pending: '‚è≥',
                acknowledged: 'üìù',
                resolved: '‚úÖ'
            };
            return icons[status] || 'üìã';
        }

        function getStatusColor(status) {
            const colors = {
                pending: '#FF9800',
                acknowledged: '#2196F3',
                resolved: '#4CAF50'
            };
            return colors[status] || '#666';
        }

        function getStatusText(status) {
            const texts = {
                pending: 'Pending',
                acknowledged: 'Acknowledged',
                resolved: 'Action Taken'
            };
            return texts[status] || 'Unknown';
        }

        function getDaysSince(dateStr) {
            const date = new Date(dateStr);
            const today = new Date();
            const diffTime = Math.abs(today - date);
            return Math.ceil(diffTime / (1000 * 60 * 60 * 24));
        }

        function showGrievanceDetails(id) {
            const grievance = grievances.find(g => g.id === id);
            if (!grievance) return;
            
            const modal = document.createElement('div');
            modal.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0,0,0,0.8);
                z-index: 2000;
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 20px;
            `;
            
            modal.innerHTML = `
                <div style="background: white; padding: 20px; border-radius: 15px; width: 100%; max-width: 400px; max-height: 80%; overflow-y: auto;">
                    <h3 style="margin-bottom: 15px;">${getStatusIcon(grievance.status)} ${grievance.title}</h3>
                    <div style="margin-bottom: 15px;">
                        <strong>ID:</strong> ${grievance.id}<br>
                        <strong>Date:</strong> ${grievance.date}<br>
                        <strong>Status:</strong> <span style="color: ${getStatusColor(grievance.status)};">${getStatusText(grievance.status)}</span><br>
                        <strong>Department:</strong> ${grievance.department}<br>
                        <strong>Location:</strong> ${grievance.location}
                    </div>
                    <div style="background: #f5f5f5; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
                        <strong>Description:</strong><br>
                        ${grievance.description}
                    </div>
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                        <button class="btn" onclick="sendReminder('${grievance.id}')">üì¨ Send Reminder</button>
                        <button class="btn" onclick="closeGrievanceModal()" style="background: #ccc; color: #333;">‚ùå Close</button>
                    </div>
                </div>
            `;
            
            modal.id = 'grievanceModal';
            document.body.appendChild(modal);
        }

        function sendReminder(id) {
            const grievance = grievances.find(g => g.id === id);
            if (!grievance) return;
            
            // Simulate sending reminder
            showNotification('Reminder sent to department!');
            
            // Update last reminder date
            grievance.lastReminder = new Date().toLocaleDateString('en-IN');
            saveGrievances();
            
            closeGrievanceModal();
        }

        function closeGrievanceModal() {
            const modal = document.getElementById('grievanceModal');
            if (modal) modal.remove();
        }

        function updateAchievements() {
            const totalReports = grievances.length;
            const resolvedReports = grievances.filter(g => g.status === 'resolved').length;
            
            const achievementText = document.getElementById('achievementText');
            if (!achievementText) return;
            
            if (totalReports === 0) {
                achievementText.textContent = 'Submit your first report to start earning badges!';
            } else if (totalReports < 5) {
                achievementText.textContent = `${totalReports} reports submitted! Keep going!`;
            } else if (totalReports < 10) {
                achievementText.textContent = `${totalReports} reports - Active Citizen Badge earned!`;
            } else {
                achievementText.textContent = `${totalReports} reports - Community Champion! üèÜ`;
            }
        }

        // Utility functions
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.style.background = type === 'error' ? '#f44336' : '#4CAF50';
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                showNotification('Copied to clipboard!');
            }).catch(() => {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                showNotification('Copied to clipboard!');
            });
        }

        function checkOnlineStatus() {
            const indicator = document.getElementById('offlineIndicator');
            if (!indicator) return;
            
            function updateStatus() {
                if (navigator.onLine) {
                    indicator.textContent = 'üì∂ Online';
                    indicator.style.background = '#4CAF50';
                } else {
                    indicator.textContent = 'üìµ Offline';
                    indicator.style.background = '#FF9800';
                }
            }
            
            updateStatus();
            window.addEventListener('online', updateStatus);
            window.addEventListener('offline', updateStatus);
        }

        // Dashboard functions
        function filterByBlock() {
            showNotification('Filter feature would show block-wise data');
        }

        function generateFullReport() {
            const reportData = {
                totalGrievances: grievances.length,
                pendingGrievances: grievances.filter(g => g.status === 'pending').length,
                resolvedGrievances: grievances.filter(g => g.status === 'resolved').length,
                userLocation: `${userData.ward}, ${userData.address}`
            };
            
            const report = `
                üìä JANCONNECT PERSONAL REPORT
                ================================
                
                User: ${userData.name}
                Location: ${reportData.userLocation}
                Generated: ${new Date().toLocaleDateString('en-IN')}
                
                SUMMARY:
                - Total Reports: ${reportData.totalGrievances}
                - Pending: ${reportData.pendingGrievances}
                - Resolved: ${reportData.resolvedGrievances}
                - Success Rate: ${reportData.totalGrievances > 0 ? Math.round((reportData.resolvedGrievances / reportData.totalGrievances) * 100) : 0}%
                
                RECENT GRIEVANCES:
                ${grievances.slice(0, 5).map(g => `- ${g.title} (${g.status})`).join('\n')}
                
                Generated by JanConnect - Voice of the People
            `;
            
            copyToClipboard(report);
            showNotification('Full report copied to clipboard!');
        }

        // Initialize dashboard charts
        function initDashboard() {
            const issueChart = document.getElementById('issueChart');
            if (!issueChart) return;
            
            const issues = [
                { name: 'üõ£Ô∏è Roads', count: 342, width: '85%' },
                { name: 'üö∞ Water', count: 187, width: '60%' },
                { name: 'üè• Health', count: 156, width: '50%' },
                { name: '‚ö° Electricity', count: 98, width: '35%' },
                { name: 'üè¢ Other', count: 67, width: '25%' }
            ];
            
            issueChart.innerHTML = issues.map(issue => `
                <div style="font-size: 10px; margin: 5px 0;">
                    <div style="display: flex; justify-content: space-between;">
                        <span>${issue.name}</span><span>${issue.count}</span>
                    </div>
                    <div class="chart-bar" style="width: ${issue.width};"></div>
                </div>
            `).join('');
        }

        // Auto-save functionality
        function enableAutoSave() {
            setInterval(() => {
                saveUserData();
                saveGrievances();
            }, 30000); // Save every 30 seconds
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Ctrl/Cmd + Enter to submit forms
            if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
                const currentScreenEl = document.getElementById(currentScreen);
                const submitBtn = currentScreenEl.querySelector('.btn:last-of-type');
                if (submitBtn && !submitBtn.disabled) {
                    submitBtn.click();
                }
            }
            
            // Escape to close modals
            if (e.key === 'Escape') {
                const modals = ['navMenu', 'scribbleModal', 'editModal', 'socialModal', 'grievanceModal'];
                modals.forEach(modalId => {
                    const modal = document.getElementById(modalId);
                    if (modal) modal.remove();
                });
            }
        });

        // Geolocation for automatic address detection
        function getLocation() {
            if ("geolocation" in navigator) {
                navigator.geolocation.getCurrentPosition(
                    function(position) {
                        // In a real app, this would reverse geocode to get address
                        const lat = position.coords.latitude;
                        const lon = position.coords.longitude;
                        
                        // Simulate address detection for Jajpur area
                        if (lat > 20.8 && lat < 21.0 && lon > 86.0 && lon < 86.5) {
                            document.getElementById('userAddress').value = 'Jajpur Road';
                            document.getElementById('userWard').value = 'Ward 12';
                            showNotification('Location detected automatically!');
                        }
                    },
                    function(error) {
                        console.log('Location access denied');
                    }
                );
            }
        }

        // Data export functionality
        function exportUserData() {
            const exportData = {
                user: userData,
                grievances: grievances,
                exportDate: new Date().toISOString(),
                appVersion: '1.0.0'
            };
            
            const dataStr = JSON.stringify(exportData, null, 2);
            const blob = new Blob([dataStr], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `janconnect_data_${Date.now()}.json`;
            a.click();
            
            showNotification('Data exported successfully!');
        }

        // Simulate random status updates for demo
        function simulateStatusUpdates() {
            setInterval(() => {
                if (grievances.length > 0 && Math.random() < 0.1) { // 10% chance every interval
                    const randomGrievance = grievances[Math.floor(Math.random() * grievances.length)];
                    if (randomGrievance.status === 'pending') {
                        randomGrievance.status = 'acknowledged';
                        saveGrievances();
                        updateGrievancesList();
                        showNotification(`Update: ${randomGrievance.title} has been acknowledged!`);
                    } else if (randomGrievance.status === 'acknowledged' && Math.random() < 0.3) {
                        randomGrievance.status = 'resolved';
                        saveGrievances();
                        updateGrievancesList();
                        showNotification(`üéâ Great news! ${randomGrievance.title} has been resolved!`);
                    }
                }
            }, 10000); // Check every 10 seconds
        }

        // Initialize everything when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize dashboard charts
            setTimeout(() => {
                initDashboard();
            }, 1000);
            
            // Enable auto-save
            enableAutoSave();
            
            // Try to get location
            setTimeout(getLocation, 2000);
            
            // Start status simulation for demo
            setTimeout(simulateStatusUpdates, 5000);
            
            // Add some demo grievances if none exist
            if (grievances.length === 0) {
                setTimeout(() => {
                    const demoGrievances = [
                        {
                            id: 'JC001234',
                            title: 'Road Pothole Issue',
                            description: 'Large pothole causing vehicle damage on main road...',
                            date: '10/08/2025',
                            status: 'resolved',
                            department: 'Public Works Department',
                            location: 'Ward 12, Jajpur Road'
                        },
                        {
                            id: 'JC001235',
                            title: 'Water Supply Problem',
                            description: 'Irregular water supply affecting multiple households...',
                            date: '12/08/2025',
                            status: 'acknowledged',
                            department: 'Public Health Engineering',
                            location: 'Ward 12, Jajpur Road'
                        }
                    ];
                    
                    // Only add demo data if user has entered their info
                    if (userData.name && userData.name.trim()) {
                        grievances.push(...demoGrievances);
                        saveGrievances();
                        updateGrievancesList();
                    }
                }, 3000);
            }
            
            // Show welcome message
            setTimeout(() => {
                if (userData.name && userData.name.trim()) {
                    showNotification(`Welcome back, ${userData.name}! üëã`);
                } else {
                    showNotification('Welcome to JanConnect! Setup your profile to get started.');
                }
            }, 1000);
        });

        // PWA functionality
        let deferredPrompt;
        
        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
            
            // Show install button
            const installBtn = document.createElement('button');
            installBtn.className = 'btn btn-primary';
            installBtn.innerHTML = 'üì± Install JanConnect App';
            installBtn.style.cssText = 'position: fixed; top: 20px; left: 20px; z-index: 1000; font-size: 12px; padding: 8px 12px;';
            installBtn.onclick = () => {
                deferredPrompt.prompt();
                deferredPrompt.userChoice.then((choiceResult) => {
                    if (choiceResult.outcome === 'accepted') {
                        showNotification('JanConnect installed successfully!');
                    }
                    deferredPrompt = null;
                    installBtn.remove();
                });
            };
            
            document.body.appendChild(installBtn);
            
            setTimeout(() => {
                if (installBtn.parentNode) {
                    installBtn.remove();
                }
            }, 10000); // Remove install button after 10 seconds
        });

        // Service Worker registration for offline functionality
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then((registration) => {
                        console.log('SW registered: ', registration);
                    })
                    .catch((registrationError) => {
                        console.log('SW registration failed: ', registrationError);
                    });
            });
        }

        // Handle app install
        window.addEventListener('appinstalled', (evt) => {
            showNotification('JanConnect app installed! You can now use it offline.');
        });

        // Handle network changes
        window.addEventListener('online', () => {
            showNotification('Back online! Syncing data...');
            // In a real app, this would sync pending submissions
        });

        window.addEventListener('offline', () => {
            showNotification('You are now offline. Data will be saved locally.');
        });

        // Additional utility functions for complete functionality
        function validatePhoneNumber(phone) {
            const phoneRegex = /^[\+]?[1-9][\d]{0,15}$/;
            return phoneRegex.test(phone.replace(/\s+/g, ''));
        }

        function formatDate(date) {
            return new Date(date).toLocaleDateString('en-IN', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
        }

        function sanitizeInput(input) {
            const div = document.createElement('div');
            div.textContent = input;
            return div.innerHTML;
        }

        // Accessibility improvements
        function improveAccessibility() {
            // Add ARIA labels
            document.querySelectorAll('.btn').forEach(btn => {
                if (!btn.getAttribute('aria-label')) {
                    btn.setAttribute('aria-label', btn.textContent.trim());
                }
            });
            
            // Add focus management
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Tab') {
                    document.body.classList.add('keyboard-nav');
                }
            });
            
            document.addEventListener('mousedown', () => {
                document.body.classList.remove('keyboard-nav');
            });
        }

        // Call accessibility improvements
        setTimeout(improveAccessibility, 1000);

        // Final initialization call
        console.log('üöÄ JanConnect - Voice of the People initialized successfully!');
        console.log('üì± App features:');
        console.log('  ‚úÖ Voice input with speech recognition');
        console.log('  ‚úÖ AI-powered issue detection');
        console.log('  ‚úÖ Multi-channel submission (Email, WhatsApp, Portal)');
        console.log('  ‚úÖ Real-time grievance tracking');
        console.log('  ‚úÖ Media toolkit for press outreach');
        console.log('  ‚úÖ Offline functionality');
        console.log('  ‚úÖ Data analytics and reporting');
        console.log('  ‚úÖ Multi-language support');
        console.log('  ‚úÖ Accessibility features');
    </script>
