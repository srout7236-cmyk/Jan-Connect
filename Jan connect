                showNotification('Video evidence added!');
            }
        }

        function openScribblePad() {
            // Create a simple scribble interface
            const modal = document.createElement('div');
            modal.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0,0,0,0.8);
                z-index: 2000;
                display: flex;
                justify-content: center;
                align-items: center;
            `;
            
            modal.innerHTML = `
                <div style="background: white; padding: 20px; border-radius: 15px; width: 90%; max-width: 400px;">
                    <h3 style="margin-bottom: 15px;">‚úèÔ∏è Scribble Pad</h3>
                    <canvas id="scribbleCanvas" width="300" height="200" style="border: 2px solid #ddd; width: 100%;"></canvas>
                    <div style="margin-top: 15px;">
                        <button class="btn" onclick="saveScribble()">üíæ Save</button>
                        <button class="btn" onclick="clearCanvas()">üóëÔ∏è Clear</button>
                        <button class="btn" onclick="closeScribblePad()" style="background: #ccc; color: #333;">‚ùå Close</button>
                    </div>
                </div>
            `;
            
            modal.id = 'scribbleModal';
            document.body.appendChild(modal);
            initCanvas();
        }

        function initCanvas() {
            const canvas = document.getElementById('scribbleCanvas');
            const ctx = canvas.getContext('2d');
            let isDrawing = false;
            
            canvas.addEventListener('mousedown', startDrawing);
            canvas.addEventListener('mousemove', draw);
            canvas.addEventListener('mouseup', stopDrawing);
            canvas.addEventListener('touchstart', handleTouch);
            canvas.addEventListener('touchmove', handleTouch);
            canvas.addEventListener('touchend', stopDrawing);
            
            function startDrawing(e) {
                isDrawing = true;
                draw(e);
            }
            
            function draw(e) {
                if (!isDrawing) return;
                
                const rect = canvas.getBoundingClientRect();
                const x = (e.clientX || e.touches[0].clientX) - rect.left;
                const y = (e.clientY || e.touches[0].clientY) - rect.top;
                
                ctx.lineWidth = 3;
                ctx.lineCap = 'round';
                ctx.strokeStyle = '#2196F3';
                
                ctx.lineTo(x, y);
                ctx.stroke();
                ctx.beginPath();
                ctx.moveTo(x, y);
            }
            
            function stopDrawing() {
                if (isDrawing) {
                    isDrawing = false;
                    ctx.beginPath();
                }
            }
            
            function handleTouch(e) {
                e.preventDefault();
                const touch = e.touches[0];
                const mouseEvent = new MouseEvent(e.type === 'touchstart' ? 'mousedown' : 
                                                 e.type === 'touchmove' ? 'mousemove' : 'mouseup', {
                    clientX: touch.clientX,
                    clientY: touch.clientY
                });
                canvas.dispatchEvent(mouseEvent);
            }
        }

        function saveScribble() {
            const canvas = document.getElementById('scribbleCanvas');
            problemData.scribble = canvas.toDataURL();
            showNotification('Handwritten note saved!');
            closeScribblePad();
        }

        function clearCanvas() {
            const canvas = document.getElementById('scribbleCanvas');
            const ctx = canvas.getContext('2d');
            ctx.clearRect(0, 0, canvas.width, canvas.height);
        }

        function closeScribblePad() {
            const modal = document.getElementById('scribbleModal');
            if (modal) modal.remove();
        }

        // AI Problem Analysis
        function analyzeProbleFm() {
            const problemText = document.getElementById('problemText').value.toLowerCase();
            const aiSuggestion = document.getElementById('aiSuggestion');
            const detectedIssue = document.getElementById('detectedIssue');
            
            // Simple keyword-based detection (in real app, this would use actual AI)
            let department = '';
            let officer = '';
            let issueType = '';
            
            if (problemText.includes('road') || problemText.includes('‡¨∞‡¨æ‡¨∏‡≠ç‡¨§‡¨æ') || problemText.includes('pothole')) {
                issueType = 'Road Infrastructure Problem';
                department = 'Public Works Department';
                officer = 'Block Development Officer';
            } else if (problemText.includes('water') || problemText.includes('‡¨™‡¨æ‡¨£‡¨ø') || problemText.includes('supply')) {
                issueType = 'Water Supply Issue';
                department = 'Public Health Engineering';
                officer = 'Executive Engineer';
            } else if (problemText.includes('drainage') || problemText.includes('sewer') || problemText.includes('‡¨®‡¨æ‡¨≥')) {
                issueType = 'Drainage Problem';
                department = 'Municipal Corporation';
                officer = 'Health Officer';
            } else if (problemText.includes('health') || problemText.includes('hospital') || problemText.includes('‡¨∏‡≠ç‡≠±‡¨æ‡¨∏‡≠ç‡¨•‡≠ç‡≠ü')) {
                issueType = 'Public Health Issue';
                department = 'District Health Department';
                officer = 'Chief Medical Officer';
            } else if (problemText.includes('electricity') || problemText.includes('power') || problemText.includes('‡¨¨‡¨ø‡¨¶‡≠ç‡≠ü‡≠Å‡¨§')) {
                issueType = 'Electrical Problem';
                department = 'GRIDCO/SOUTHCO';
                officer = 'Assistant Engineer';
            } else {
                issueType = 'General Civic Issue';
                department = 'Block Administration';
                officer = 'Block Development Officer';
            }
            
            if (problemText.trim()) {
                problemData.issueType = issueType;
                problemData.department = department;
                problemData.officer = officer;
                
                detectedIssue.innerHTML = `
                    <strong>${issueType}</strong><br>
                    Department: ${department}<br>
                    Officer: ${officer}
                `;
                
                aiSuggestion.classList.remove('hidden');
                
                setTimeout(() => {
                    showNotification('AI detected your issue type!');
                }, 500);
            }
        }

        // Trigger analysis when typing
        document.addEventListener('DOMContentLoaded', function() {
            const problemText = document.getElementById('problemText');
            if (problemText) {
                problemText.addEventListener('input', function() {
                    clearTimeout(this.analyzeTimeout);
                    this.analyzeTimeout = setTimeout(analyzeProbleFm, 1000);
                });
            }
        });

        // Application generation
        function generateApplication() {
            const problemText = document.getElementById('problemText').value;
            
            if (!problemText.trim()) {
                showNotification('Please describe your problem first!', 'error');
                return;
            }
            
            problemData.problemText = problemText;
            problemData.timestamp = new Date();
            
            const application = generateFormalLetter();
            document.getElementById('generatedLetter').innerHTML = application;
            
            goToScreen('previewScreen');
            showNotification('Application generated successfully!');
        }

        function generateFormalLetter() {
            const today = new Date().toLocaleDateString('en-IN');
            
            return `
                <strong>To: ${problemData.officer || 'Block Development Officer'}</strong><br>
                ${problemData.department || 'Block Administration'}<br>
                ${userData.ward || 'Jajpur'}, Jajpur District<br>
                Odisha<br><br>
                
                <strong>Date:</strong> ${today}<br><br>
                
                <strong>Subject:</strong> ${problemData.issueType || 'Civic Issue'} - Immediate Attention Required<br><br>
                
                Respected Sir/Madam,<br><br>
                
                I am ${userData.name || 'Citizen'}, a resident of ${userData.ward || 'Ward'}, ${userData.address || 'Jajpur Road'}. 
                I would like to bring to your urgent attention a serious civic issue affecting our community.<br><br>
                
                <strong>Problem Details:</strong><br>
                ${problemData.problemText}<br><br>
                
                <strong>Location:</strong> ${userData.address}, ${userData.ward}<br>
                <strong>Issue Type:</strong> ${problemData.issueType || 'General Civic Issue'}<br>
                <strong>Urgency Level:</strong> High<br>
                <strong>Affected Citizens:</strong> Multiple residents<br><br>
                
                This issue is causing significant inconvenience to the residents and requires immediate intervention. 
                I request your prompt action to resolve this matter at the earliest.<br><br>
                
                I have attached relevant evidence and documentation to support this complaint. 
                Please acknowledge receipt of this application and provide an expected timeline for resolution.<br><br>
                
                I look forward to your swift response and action on this matter.<br><br>
                
                Yours faithfully,<br><br>
                
                <strong>${userData.name || 'Citizen'}</strong><br>
                Phone: ${userData.phone || 'Not provided'}<br>
                Address: ${userData.address}, ${userData.ward}<br>
                Email: janconnect.complaint@example.com<br>
                Application ID: JC${Date.now().toString().slice(-6)}
            `;
        }

