        }

        function saveEditedApplication() {
            const textarea = document.getElementById('editTextarea');
            const editedText = textarea.value.replace(/\n/g, '<br>');
            document.getElementById('generatedLetter').innerHTML = editedText;
            closeEditModal();
            showNotification('Application updated successfully!');
        }

        function closeEditModal() {
            const modal = document.getElementById('editModal');
            if (modal) modal.remove();
        }

        // Submission functions
        function downloadPDF() {
            showProgress();
            
            // Simulate PDF generation
            setTimeout(() => {
                const content = document.getElementById('generatedLetter').innerHTML;
                const blob = new Blob([content], { type: 'text/html' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `JanConnect_Application_${Date.now()}.html`;
                a.click();
                
                showNotification('Application downloaded successfully!');
                updateProgress(25);
            }, 1000);
        }

        function emailDepartment() {
            showProgress();
            
            setTimeout(() => {
                const subject = `${problemData.issueType} - Application ID: JC${Date.now().toString().slice(-6)}`;
                const body = document.getElementById('generatedLetter').textContent;
                const mailtoLink = `mailto:${problemData.department?.toLowerCase().replace(/\s+/g, '.')}@jajpur.gov.in?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
                
                window.open(mailtoLink);
                showNotification('Email client opened! Please send the email.');
                updateProgress(50);
            }, 1500);
        }

        function sendWhatsApp() {
            showProgress();
            
            setTimeout(() => {
                const message = `üö® CIVIC ISSUE ALERT üö®\n\n${problemData.issueType}\nLocation: ${userData.address}, ${userData.ward}\n\nDear ${problemData.officer},\n\nPlease find attached formal complaint regarding ${problemData.issueType.toLowerCase()} in our area.\n\nUrgent action required.\n\nRegards,\n${userData.name}\nJanConnect User`;
                
